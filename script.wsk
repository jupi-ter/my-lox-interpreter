entity Player {
    float hsp;
    float vsp;
    
    on_create {
        self.hsp = 0;
        self.vsp = 0;
        renderable.current_sprite_id = 2;
        renderable.image_speed = 0.1;
        transform.x = 64;
        transform.y = 64;
    }
    
    on_update {
        transform.x = transform.x + self.hsp;
    }
    
    on_destroy {
        self.hsp = 0;
    }
}
